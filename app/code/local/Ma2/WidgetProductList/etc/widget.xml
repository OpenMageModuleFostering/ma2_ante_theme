                <source_model>adminhtml/system_config_source_yesno</source_model>
            </show_widget_title>
            <products_count translate="label">
                <required>1</required>
                <visible>1</visible>
                <label>Maximum number of products</label>
                <value>6</value>
                <type>text</type>
            </products_count>
            <sort_by translate="label">
                <visible>1</visible>
                <label>Sort by</label>
                <type>select</type>
                <values>
                    <price translate="label">
                        <value>price</value>
                        <label>Price</label>
                    </price>
                    <name translate="label">
                        <value>name</value>
                        <label>Name</label>
                    </name>
                    <created_at translate="label">
                        <value>created_at</value>
                        <label>Created date</label>
                    </created_at>
                </values>
            </sort_by>
            <sort_dir translate="label">
                <visible>1</visible>
                <label>Sort direction</label>
                <type>select</type>
                <values>
                    <asc translate="label">
                        <value>ASC</value><label>ASC</label>
                    </asc>
                    <desc translate="label">
                        <value>DESC</value><label>DESC</label>
                    </desc>
                </values>
            </sort_dir>
            <list_type translate="label">
                <visible>1</visible>
                <label>Display mode (grid, list)</label>
                <type>select</type>
                <values>
                    <grid_type translate="label">
                        <label>Grid</label>
                        <value>grid</value>
                    </grid_type>
                    <list_type translate="label">
                        <label>List</label>
                        <value>list</value>
                    </list_type>
                </values>
            </list_type>
            <column_count>
                <required>0</required>
                <visible>1</visible>
                <label>Number of products per row</label>
                <value>6</value>
                <type>text</type>
                <depends>
                  <list_type><value>grid</value></list_type>
                </depends>
            </column_count>
            <show_addtocart translate="label">
               <visible>1</visible>
                <label> Show Add To Cart button</label>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
            </show_addtocart>
            <show_details translate="label">
               <visible>1</visible>
                <label> Show Details button</label>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
            </show_details>
            <show_price translate="label">
               <visible>1</visible>
                <label>Show Price</label>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
            </show_price>
            <show_short_description translate="label">
               <visible>1</visible>
                <label>Show short description</label>
                <type>select</type>
                <source_model>adminhtml/system_config_source_yesno</source_model>
            </show_short_description>
            <short_description_limit>
              <required>0</required>
              <visible>1</visible>
              <label>Short description words limit</label>
              <type>text</type>
              <depends>
                <show_short_description><value>1</value></show_short_description>
              </depends>
            </short_description_limit>
            <template>
                <required>1</required>
                <visible>1</visible>
                <label>Select template</label>
                <type>select</type>
                <values>
                     <default translate="label">
                        <value>ma2_widgetproductlist/featured/default.phtml</value>
                        <label>Default Template</label>
                    </default>
                    <sidebar translate="label">
                        <value>ma2_widgetproductlist/featured/sidebar.phtml</value>
                        <label>sidebar</label>
                    </sidebar>
                </values>
            </template>
        </parameters>
    </Featured>
    
