			if(isset($generalOptions->preset_styles) && !empty($generalOptions->preset_styles)):				
				$logoSrc = $this->getSkinUrl('images/logo-'.$generalOptions->preset_styles.'.png');				
			else:	
				$logoSrc = $this->getLogoSrc();
			endif;				
		endif;
	endif;
